---
interface Props {
  pattern: string;
  color: string;
  className?: string;
}

const { pattern, color, className = '' } = Astro.props;
---

{pattern === 'dendrites' && (
  <svg class={className} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Dendritas/Axones + Filamentos del hongo -->
    <g stroke={color} stroke-width="1.5" opacity="0.6">
      <!-- Axón principal -->
      <path d="M100 20 L100 80" stroke-width="2"/>
      <!-- Dendritas ramificadas -->
      <path d="M100 40 L80 50 M100 40 L120 50"/>
      <path d="M100 60 L75 70 M100 60 L125 70"/>
      <path d="M100 80 L70 90 M100 80 L130 90"/>
      <!-- Filamentos del hongo -->
      <circle cx="100" cy="100" r="30" fill="none" stroke-width="1"/>
      <circle cx="100" cy="100" r="20" fill="none" stroke-width="1"/>
      <path d="M100 100 L90 120 M100 100 L110 120"/>
      <path d="M100 100 L85 130 M100 100 L115 130"/>
      <!-- Más ramificaciones -->
      <path d="M80 50 L70 60 M80 50 L90 60"/>
      <path d="M120 50 L110 60 M120 50 L130 60"/>
    </g>
  </svg>
)}

{pattern === 'altitude' && (
  <svg class={className} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Flujo de aire/Altimetría/Montañas estilizadas -->
    <g stroke={color} stroke-width="1.5" opacity="0.6">
      <!-- Montañas -->
      <path d="M20 150 L60 100 L100 120 L140 80 L180 100 L200 70" stroke-width="2" fill="none"/>
      <path d="M40 160 L80 110 L120 130 L160 90" stroke-width="1.5" fill="none"/>
      <!-- Líneas de altitud -->
      <path d="M0 140 L200 140" stroke-width="0.5" opacity="0.4"/>
      <path d="M0 120 L200 120" stroke-width="0.5" opacity="0.4"/>
      <path d="M0 100 L200 100" stroke-width="0.5" opacity="0.4"/>
      <!-- Flujo de aire -->
      <path d="M30 50 Q50 40 70 50 T110 50" stroke-width="1" opacity="0.5"/>
      <path d="M50 70 Q70 60 90 70 T130 70" stroke-width="1" opacity="0.5"/>
      <path d="M70 90 Q90 80 110 90 T150 90" stroke-width="1" opacity="0.5"/>
    </g>
  </svg>
)}

{pattern === 'breath' && (
  <svg class={className} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Ondas suaves/Respiración/Ramas orgánicas -->
    <g stroke={color} stroke-width="1.5" opacity="0.6">
      <!-- Ondas de respiración -->
      <path d="M20 100 Q50 80 80 100 T140 100 T200 100" stroke-width="2" fill="none"/>
      <path d="M20 100 Q50 120 80 100 T140 100 T200 100" stroke-width="2" fill="none"/>
      <path d="M40 100 Q60 90 80 100 T120 100 T160 100" stroke-width="1.5" opacity="0.7" fill="none"/>
      <path d="M40 100 Q60 110 80 100 T120 100 T160 100" stroke-width="1.5" opacity="0.7" fill="none"/>
      <!-- Ramas orgánicas -->
      <path d="M100 20 Q110 40 100 60 Q90 80 100 100" stroke-width="2"/>
      <path d="M100 60 Q115 70 120 90" stroke-width="1.5"/>
      <path d="M100 60 Q85 70 80 90" stroke-width="1.5"/>
      <path d="M100 100 Q110 120 100 140 Q90 160 100 180" stroke-width="2"/>
      <path d="M100 140 Q115 150 120 170" stroke-width="1.5"/>
      <path d="M100 140 Q85 150 80 170" stroke-width="1.5"/>
    </g>
  </svg>
)}

{pattern === 'intestine' && (
  <svg class={className} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Curvas intestinales + Abanicos concéntricos -->
    <g stroke={color} stroke-width="1.5" opacity="0.6">
      <!-- Curvas intestinales -->
      <path d="M20 100 Q40 60 60 100 T100 100 T140 100 T180 100" stroke-width="2" fill="none"/>
      <path d="M30 100 Q50 70 70 100 T110 100 T150 100 T170 100" stroke-width="1.5" opacity="0.7" fill="none"/>
      <!-- Abanicos concéntricos -->
      <circle cx="100" cy="100" r="40" fill="none" stroke-width="1"/>
      <circle cx="100" cy="100" r="30" fill="none" stroke-width="1"/>
      <circle cx="100" cy="100" r="20" fill="none" stroke-width="1"/>
      <circle cx="100" cy="100" r="10" fill="none" stroke-width="1"/>
      <!-- Líneas radiales del abanico -->
      <path d="M100 100 L100 60" stroke-width="1"/>
      <path d="M100 100 L130 85" stroke-width="1"/>
      <path d="M100 100 L130 115" stroke-width="1"/>
      <path d="M100 100 L100 140" stroke-width="1"/>
      <path d="M100 100 L70 85" stroke-width="1"/>
      <path d="M100 100 L70 115" stroke-width="1"/>
    </g>
  </svg>
)}

{pattern === 'synapse' && (
  <svg class={className} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Sinapsis + Constelaciones -->
    <g stroke={color} stroke-width="1.5" opacity="0.6">
      <!-- Neuronas/Sinapsis -->
      <circle cx="60" cy="60" r="15" fill="none" stroke-width="2"/>
      <circle cx="140" cy="60" r="15" fill="none" stroke-width="2"/>
      <circle cx="60" cy="140" r="15" fill="none" stroke-width="2"/>
      <circle cx="140" cy="140" r="15" fill="none" stroke-width="2"/>
      <circle cx="100" cy="100" r="15" fill="none" stroke-width="2"/>
      <!-- Conexiones sinápticas -->
      <path d="M60 60 L100 100" stroke-width="1.5"/>
      <path d="M140 60 L100 100" stroke-width="1.5"/>
      <path d="M60 140 L100 100" stroke-width="1.5"/>
      <path d="M140 140 L100 100" stroke-width="1.5"/>
      <path d="M60 60 L140 60" stroke-width="1" opacity="0.5"/>
      <path d="M60 140 L140 140" stroke-width="1" opacity="0.5"/>
      <!-- Constelaciones (estrellas) -->
      <circle cx="30" cy="30" r="2" fill={color} opacity="0.8"/>
      <circle cx="170" cy="30" r="2" fill={color} opacity="0.8"/>
      <circle cx="30" cy="170" r="2" fill={color} opacity="0.8"/>
      <circle cx="170" cy="170" r="2" fill={color} opacity="0.8"/>
      <circle cx="50" cy="100" r="1.5" fill={color} opacity="0.8"/>
      <circle cx="150" cy="100" r="1.5" fill={color} opacity="0.8"/>
      <!-- Líneas de constelación -->
      <path d="M30 30 L50 100" stroke-width="0.5" opacity="0.4"/>
      <path d="M170 30 L150 100" stroke-width="0.5" opacity="0.4"/>
    </g>
  </svg>
)}


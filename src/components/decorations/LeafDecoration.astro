---
interface Props {
  size?: 'small' | 'medium' | 'large';
  position?: string;
  opacity?: number;
  rotation?: number;
  delay?: number;
  variant?: 'simple' | 'detailed';
}

const {
  size = 'medium',
  position = 'top-1/5 right-1/6',
  opacity = 18,
  rotation = 30,
  delay = 0,
  variant = 'simple'
} = Astro.props;

const sizeMap = {
  small: 'w-10 h-10',
  medium: 'w-12 h-12',
  large: 'w-14 h-14'
};
---

<div 
  class={`absolute ${position} ${sizeMap[size]} opacity-${opacity} animate-float`}
  style={`animation-delay: ${delay}s; transform: rotate(${rotation}deg);`}
>
  {variant === 'simple' && (
    <svg viewBox="0 0 100 100" class="w-full h-full">
      <path d="M50 20 Q30 40 50 60 Q70 40 50 20" fill="#7a9b5a" opacity="0.7"/>
      <path d="M50 20 L50 60" stroke="#5f7d44" stroke-width="2" opacity="0.6"/>
    </svg>
  )}
  
  {variant === 'detailed' && (
    <svg viewBox="0 0 100 100" class="w-full h-full">
      <path d="M50 20 Q30 40 50 60 Q70 40 50 20" fill="#7a9b5a" opacity="0.7"/>
      <path d="M50 20 L50 60" stroke="#5f7d44" stroke-width="2" opacity="0.6"/>
      <path d="M50 20 Q40 30 50 40 Q60 30 50 20" fill="#7a9b5a" opacity="0.5"/>
    </svg>
  )}
</div>


<footer class="bg-earth-800/70 backdrop-blur-md text-cream-100 relative overflow-hidden">
  <!-- Decorative mushroom pattern background -->
  <div class="absolute inset-0 opacity-10">
    <div class="mushroom-decoration w-full h-full"></div>
  </div>
  
  <!-- Large decorative mushrooms in background -->
  <div class="absolute inset-0 opacity-5 pointer-events-none">
    <!-- Left side mushrooms -->
    <div class="absolute bottom-0 left-0 w-48 h-48">
      <svg viewBox="0 0 200 200" class="w-full h-full">
        <path d="M100 40 Q90 70 100 100 Q110 70 100 40" fill="#7a9b5a" opacity="0.4"/>
        <ellipse cx="100" cy="110" rx="20" ry="30" fill="#b8935c" opacity="0.3"/>
        <circle cx="95" cy="50" r="3" fill="#d4b896" opacity="0.5"/>
        <circle cx="105" cy="55" r="2" fill="#d4b896" opacity="0.5"/>
      </svg>
    </div>
    <!-- Right side mushrooms -->
    <div class="absolute bottom-0 right-0 w-40 h-40">
      <svg viewBox="0 0 200 200" class="w-full h-full">
        <path d="M100 50 Q92 75 100 100 Q108 75 100 50" fill="#7a9b5a" opacity="0.4"/>
        <ellipse cx="100" cy="110" rx="18" ry="28" fill="#b8935c" opacity="0.3"/>
        <circle cx="98" cy="60" r="2.5" fill="#d4b896" opacity="0.5"/>
        <circle cx="102" cy="65" r="2" fill="#d4b896" opacity="0.5"/>
      </svg>
    </div>
    <!-- Center small mushrooms -->
    <div class="absolute top-1/4 left-1/2 transform -translate-x-1/2 w-32 h-32">
      <svg viewBox="0 0 150 150" class="w-full h-full">
        <path d="M75 30 Q70 50 75 70 Q80 50 75 30" fill="#7a9b5a" opacity="0.3"/>
        <ellipse cx="75" cy="80" rx="12" ry="20" fill="#b8935c" opacity="0.2"/>
      </svg>
    </div>
  </div>
  
  <!-- Floating spores -->
  <div class="absolute top-10 left-1/4 w-2 h-2 bg-sage-400/20 rounded-full animate-float"></div>
  <div class="absolute top-20 right-1/3 w-1.5 h-1.5 bg-cream-300/20 rounded-full animate-float" style="animation-delay: 1s;"></div>
  <div class="absolute top-32 left-2/3 w-1 h-1 bg-mushroom-300/20 rounded-full animate-float" style="animation-delay: 2s;"></div>
  <div class="absolute bottom-20 right-1/4 w-1.5 h-1.5 bg-sage-300/20 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
  
  <div class="relative z-10">
    <!-- Main footer content -->
    <div class="container mx-auto px-4 py-16">
      <div class="grid md:grid-cols-4 gap-8 mb-12">

---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Be Nice Fungi Shop - Hongos funcionales y adaptógenos para tu bienestar natural" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS for ornamental elements -->
    <style>
      .ornamental-border {
        position: relative;
      }
      .ornamental-border::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, transparent, #b8935c, transparent);
        border-radius: 2px;
      }
      .ornamental-border::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, transparent, #b8935c, transparent);
        border-radius: 2px;
      }
      
      .circular-ornament {
        position: relative;
      }
      .circular-ornament::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120%;
        height: 120%;
        border: 2px solid #b8935c;
        border-radius: 50%;
        opacity: 0.3;
        animation: rotate-slow 30s linear infinite;
      }
      
      .mushroom-decoration {
        background-image: radial-gradient(circle at 20% 80%, #7a9b5a 0%, transparent 50%),
                          radial-gradient(circle at 80% 20%, #b8935c 0%, transparent 50%),
                          radial-gradient(circle at 40% 40%, #d4b896 0%, transparent 50%);
      }
      
      /* Mushroom pattern background */
      .mushroom-pattern-bg {
        background-image: 
          url('data:image/svg+xml;utf8,<svg width="120" height="120" viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg"><g opacity="0.03"><path d="M60 20 Q55 35 60 50 Q65 35 60 20" fill="%237a9b5a"/><ellipse cx="60" cy="55" rx="8" ry="12" fill="%23b8935c"/><circle cx="58" cy="25" r="2" fill="%23d4b896"/><circle cx="62" cy="28" r="1.5" fill="%23d4b896"/></g></svg>'),
          url('data:image/svg+xml;utf8,<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><g opacity="0.02"><path d="M50 15 Q45 28 50 42 Q55 28 50 15" fill="%237a9b5a"/><ellipse cx="50" cy="45" rx="7" ry="10" fill="%23b8935c"/></g></svg>');
        background-size: 120px 120px, 100px 100px;
        background-position: 0 0, 60px 60px;
      }
      
      /* Floating mushroom spores animation */
      @keyframes floatSpore {
        0%, 100% { 
          transform: translateY(0px) translateX(0px) rotate(0deg);
          opacity: 0.3;
        }
        25% { 
          transform: translateY(-20px) translateX(10px) rotate(90deg);
          opacity: 0.5;
        }
        50% { 
          transform: translateY(-40px) translateX(-5px) rotate(180deg);
          opacity: 0.4;
        }
        75% { 
          transform: translateY(-20px) translateX(-10px) rotate(270deg);
          opacity: 0.5;
        }
      }
      
      .spore-float {
        animation: floatSpore 8s ease-in-out infinite;
      }
      
      /* Mushroom border decoration */
      .mushroom-border {
        position: relative;
      }
      
      .mushroom-border::before {
        content: '';
        position: absolute;
        top: -2px;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, 
          transparent 0%, 
          #7a9b5a 20%, 
          #b8935c 50%, 
          #7a9b5a 80%, 
          transparent 100%);
        border-radius: 2px;
        opacity: 0.3;
      }
    </style>
  </head>

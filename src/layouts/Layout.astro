---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Be Nice Fungi Shop - Hongos funcionales y adaptógenos para tu bienestar natural" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS for ornamental elements -->
    <style>
      .ornamental-border {
        position: relative;
      }
      .ornamental-border::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, transparent, #b8935c, transparent);
        border-radius: 2px;
      }
      .ornamental-border::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, transparent, #b8935c, transparent);
        border-radius: 2px;
      }
      
      .circular-ornament {
        position: relative;
      }
      .circular-ornament::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120%;
        height: 120%;
        border: 2px solid #b8935c;
        border-radius: 50%;
        opacity: 0.3;
        animation: rotate-slow 30s linear infinite;
      }
      
      .mushroom-decoration {
        background-image: radial-gradient(circle at 20% 80%, #7a9b5a 0%, transparent 50%),
                          radial-gradient(circle at 80% 20%, #b8935c 0%, transparent 50%),
                          radial-gradient(circle at 40% 40%, #d4b896 0%, transparent 50%);
      }
    </style>
  </head>
  <body class="bg-cream-100 text-earth-900 font-sans">
    <slot />
    
    <!-- WhatsApp Float Button -->
    <div class="fixed bottom-6 right-6 z-40">
      <a 
        href="https://wa.me/573004940576?text=Hola,%20me%20interesa%20conocer%20más%20sobre%20sus%20productos%20de%20hongos%20funcionales"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-2xl transition-all duration-300 hover:scale-110 animate-bounce-gentle group flex items-center justify-center"
        aria-label="Contactar por WhatsApp"
      >
        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
      </a>
    </div>

    <script>
      // Global cart count update function
      function updateGlobalCartCount() {
        const cart = JSON.parse(localStorage.getItem('cart')) || [];
        const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
        const cartCountElements = document.querySelectorAll('#cart-count, #mobile-cart-count');
        
        cartCountElements.forEach(el => {
          if (el) {
            el.textContent = totalItems.toString();
            el.classList.toggle('hidden', totalItems === 0);
          }
        });
      }

      // Listen for cart updates
      window.addEventListener('storage', updateGlobalCartCount);
      window.addEventListener('cartUpdated', updateGlobalCartCount);
      
      // Initial update
      document.addEventListener('DOMContentLoaded', updateGlobalCartCount);
    </script>

    <!-- Menú móvil global fuera del header -->
    <div id="mobile-menu" class="md:hidden fixed inset-0 z-[9999]" style="display: none;">
      <div class="absolute inset-0 bg-black/50 backdrop-blur-sm z-[9999]" onclick="document.getElementById('mobile-menu').style.display='none'"></div>
      <div class="fixed top-0 right-0 bg-cream-100 w-80 h-full p-6 shadow-2xl flex flex-col overflow-y-auto z-[10000]">
        <!-- Logo centrado -->
        <div class="flex flex-col items-center mb-6">
          <img src="/image.png" alt="Logo Be Nice Fungi Shop" class="w-20 h-20 rounded-full border-4 border-earth-500 bg-white object-cover shadow-lg mb-2" />
          <h2 class="font-display text-xl font-bold text-earth-800 mt-2">Menú</h2>
        </div>
        <!-- Botón cerrar -->
        <button class="absolute top-6 right-6 p-3 rounded-full bg-earth-100 hover:bg-earth-200 transition-colors shadow-lg z-[10010]" id="mobile-menu-close" aria-label="Cerrar menú">
          <svg class="w-7 h-7 text-earth-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        <!-- Enlaces -->
        <nav class="flex flex-col space-y-2 mt-4">
          <a href="/" class="text-earth-700 hover:text-sage-600 font-medium py-3 border-b border-sage-100 text-lg">Inicio</a>
          <a href="/tienda" class="text-earth-700 hover:text-sage-600 font-medium py-3 border-b border-sage-100 text-lg">Tienda</a>
          <a href="/educacion" class="text-earth-700 hover:text-sage-600 font-medium py-3 border-b border-sage-100 text-lg">Guías de Educación</a>
          <a href="/nosotros" class="text-earth-700 hover:text-sage-600 font-medium py-3 border-b border-sage-100 text-lg">Nosotros</a>
          <a href="/contacto" class="text-earth-700 hover:text-sage-600 font-medium py-3 border-b border-sage-100 text-lg">Contacto</a>
        </nav>
        <!-- Botón carrito -->
        <a href="/carrito" class="bg-sage-500 hover:bg-sage-600 text-white px-8 py-4 rounded-full transition-all duration-300 font-semibold mt-8 flex items-center justify-center space-x-3 text-lg shadow-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 12H6L5 9z"></path>
          </svg>
          <span>Carrito (<span id="mobile-cart-count">0</span>)</span>
        </a>
      </div>
    </div>

    <script>
      // Mobile menu global
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuClose = document.getElementById('mobile-menu-close');

        mobileMenuBtn?.addEventListener('click', () => {
          if (mobileMenu) mobileMenu.style.display = 'block';
        });

        mobileMenuClose?.addEventListener('click', () => {
          if (mobileMenu) mobileMenu.style.display = 'none';
        });

        // Close menu when clicking outside
        mobileMenu?.addEventListener('click', (e) => {
          if (e.target === mobileMenu) {
            mobileMenu.style.display = 'none';
          }
        });
      });
    </script>
  </body>
</html>